
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /stores/{storeId} {
      // A store owner can read and write to their own store document.
      allow read, write: if request.auth != null && request.auth.token.email == storeId;

      // A store owner can manage the products in their own store's subcollection.
      match /products/{productId} {
        allow create, read, update, delete: if request.auth != null && request.auth.token.email == storeId;
      }
    }
  }
}
