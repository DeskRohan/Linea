
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rule for the 'stores' collection
    match /stores/{storeId} {
      // Allow anyone to read the list of stores for the dropdown
      allow read: if true;
      // Only the authenticated store owner can write to their own store document
      allow write: if request.auth != null && request.auth.uid == storeId;

      // This rule allows a store owner to manage products in their own store.
      // A customer can only update the quantity field when making a purchase.
      match /products/{productId} {
        allow read: if true;
        allow create, delete: if request.auth != null && request.auth.uid == storeId;
        // Allow full update for store owner
        allow update: if request.auth != null && request.auth.uid == storeId;
        // Allow a customer to only update the 'quantity' field
        allow update: if request.auth != null && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['quantity']);
      }

      // This rule manages access to a store's orders subcollection.
      match /orders/{orderId} {
        // Customers can create orders if the order belongs to them.
        allow create: if request.auth != null && request.resource.data.customerId == request.auth.uid;
        // The store owner can read, update, or delete any order in their store.
        allow read, update, delete: if request.auth != null && request.auth.uid == storeId;
      }
    }

    // Rule for the 'users' collection
    match /users/{userId} {
      // A user can only read or write to their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Rules for the user's orders subcollection
      match /orders/{orderId} {
        // Allow a user to create their own order record.
        allow create: if request.auth != null && request.resource.data.customerId == request.auth.uid && request.auth.uid == userId;
        // Allow a user to read, update, and delete their own orders after they've been created.
        allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
