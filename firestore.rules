
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rule for the 'stores' collection
    match /stores/{storeId} {
      // Allow anyone to read the list of stores for the dropdown
      allow read: if true;
      // Only the authenticated store owner can write to their own store document
      allow write: if request.auth != null && request.auth.uid == storeId;

      // This rule allows a store owner to manage products in their own store.
      // A customer can only update the quantity field when making a purchase.
      match /products/{productId} {
        allow read: if true;
        allow create, delete: if request.auth != null && request.auth.uid == storeId;
        // Allow full update for store owner
        allow update: if request.auth != null && request.auth.uid == storeId;
        // Allow a customer to only update the 'quantity' field
        allow update: if request.auth != null && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['quantity']);
      }
    }
    
    // Rule for the 'users' collection
    match /users/{userId} {
      // A user can only read or write to their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for the root 'orders' collection
    match /orders/{orderId} {
      // A customer can create an order if the order belongs to them.
      allow create: if request.auth != null && request.resource.data.customerId == request.auth.uid;
      
      // An order can be read by the customer who owns it or the store owner it belongs to.
      allow read: if request.auth != null && (resource.data.customerId == request.auth.uid || resource.data.storeId == request.auth.uid);

      // An order can be updated by the store owner.
      // A customer could potentially update it if rules were added (e.g., to cancel)
      allow update: if request.auth != null && resource.data.storeId == request.auth.uid;
      
      // An order can be deleted by the store owner.
      allow delete: if request.auth != null && resource.data.storeId == request.auth.uid;
    }
  }
}
